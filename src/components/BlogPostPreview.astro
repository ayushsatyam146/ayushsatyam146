---
import { formatDate } from '../utils/formatDate';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, date } = post.data;
const formattedDate = formatDate(date);
const urlDate = date.toISOString().split('T')[0].replace(/-/g, '-');
const fileName = `${urlDate}_${post.slug.replace(/\//g, '-')}.md`;

// Get first 150 characters of post body as excerpt
const { remarkPluginFrontmatter } = await post.render();
const excerpt = remarkPluginFrontmatter.excerpt || post.body.slice(0, 150) + '...';
---

<div class="post">
  <div class="post-title">- {title}</div>
  <div class="post-date">ðŸ“… {formattedDate}</div>
  <div class="post-content">
    {excerpt}
  </div>
  <div class="post-link">
    cat {fileName} <span class="arrow">â†’</span>
    <a href={`/blog/${post.slug}`} class="read-link">Read</a>
  </div>
</div>

<style>
  .post {
    margin-bottom: 30px;
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 20px;
  }
  
  .post:last-child {
    border-bottom: none;
  }
  
  .post-title {
    font-weight: bold;
    margin-bottom: 5px;
  }
  
  .post-date {
    color: var(--date-color);
    font-size: 0.9em;
    margin-bottom: 10px;
    background-color: var(--date-bg);
    display: inline-block;
    padding: 2px 6px;
    border-radius: 3px;
  }
  
  .post-content {
    line-height: 1.5;
    margin-bottom: 10px;
  }
  
  .post-link {
    color: var(--link-color);
    font-size: 0.9em;
    display: flex;
    align-items: center;
  }
  
  .arrow {
    color: var(--command-color);
    margin: 0 8px;
  }
  
  .read-link {
    background-color: var(--highlight-bg);
    padding: 2px 8px;
    border-radius: 3px;
    font-size: 0.85em;
    color: var(--text-color);
  }
</style>